    "moment": "^2.22.2",
    "morgan": "^1.9.1",
    "mysql2": "^1.6.1",
    "owasp-password-strength-test": "^1.3.0",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^4.39.0",
    "sequelize-typescript": "^0.6.6",
    "swagger-ui-express": "^4.0.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.1",
    "winston": "^3.1.0"
  }
