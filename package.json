{
  "name": "express-typescript-boilerplate",
  "version": "0.0.1",
  "description": "A boilerplate with Express, Typescript, Sequelize, and GraphQL",
  "main": "server.ts",
  "scripts": {
    "test": "mocha",
    "start": "ts-node src/server.ts",
    "dev": "nodemon --watch 'src/**/*.ts' --ignore 'src/**/*.spec.ts' --exec 'ts-node' src/server.ts",
    "lint": "./node_modules/.bin/tslint -c tslint.json --fix 'src/**/*.ts'",
    "docker:build": "./node_modules/.bin/ts-node ./scripts/dockerBuild.ts"
  },
  "author": "bschulte@kryptowire.com",
  "license": "ISC",
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/express-graphql": "^0.6.1",
    "@types/graphql": "^14.0.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/moment": "^2.13.0",
    "@types/morgan": "^1.7.35",
    "@types/owasp-password-strength-test": "^1.3.0",
    "@types/swagger-ui-express": "^3.0.0",
    "@types/winston": "^2.4.4",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^14.0.2",
    "graphql-iso-date": "^3.6.1",
